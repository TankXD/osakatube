extends base.pug

block content
    h3 Update Video

    form(action="", method="post")
        input(name="title",type="text", placeholder="Title",value =video.title, required)
        input(name="description",type="text", placeholder="Description",value = video.description,required)
        input(name="hashtags",type="text", placeholder="Hashtags",value=video.hashtags.join(),required)
        //- join()함수를 통해 array(배열)을 그대로 표시하지않고 개별 데이터로 표시해준다.
        input(value="Save", type="submit") 
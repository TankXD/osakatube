mixin video(video)

    div.video-mixin
        a(href=`/videos/${video.id}`).video-mixin__section
            if isFlyIo
                img.video-mixin__thumb(src=video.thumbUrl,crossorigin,style=`background-size:cover;background-position:center;`) 
            else
                div.video-mixin__thumb(style=`background-image:url(${video.thumbUrl});background-size:cover;background-position:center;`) 
        div.video-mixin__data
            a(href=`/users/${video.owner._id}`)
                if isFlyIo
                    img.video__mixin-avatar(src=video.owner.avatarUrl,crossorigin)
                else 
                    img.video__mixin-avatar(src="/" + video.owner.avatarUrl) 
            div.video-mixin__data-section
                a(href=`/videos/${video.id}`)
                    span.video-mixin__title=video.title
                    div.video-mixin__meta
                        p #{video.owner.username}  
                        span #{video.meta.views} views â€¢ #{new Date(video.createdAt).toLocaleDateString("ja-JP")}
    
